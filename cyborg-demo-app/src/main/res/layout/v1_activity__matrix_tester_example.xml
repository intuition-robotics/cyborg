<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.nu.art.software.cyborg.core.CyborgView
        android:id="@+id/MatrixTester"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        custom:controller="com.nu.art.software.cyborg.demo.ui.controllers.matrixTester.MatrixTesterController"/>

    <com.nu.art.software.cyborg.core.CyborgView
        android:id="@+id/ViewTester"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        custom:controller="com.nu.art.software.cyborg.demo.ui.controllers.matrixTester.ViewTesterController"/>
</LinearLayout>